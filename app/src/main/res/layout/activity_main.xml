<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        >
        <Button
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="100dp"
            android:width="90dp"
            android:text="Logo"
            android:textColor="@color/white"
            android:backgroundTint="#25ACF4"
           />

        <LinearLayout
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/email"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Email"
                android:textColorHint="#8F8F8F"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_edittext2"
                android:textColor="@color/darkgray"
                android:height="55dp" android:width="380dp"
                android:paddingLeft="10dp" android:textSize="17dp"/>

            <EditText
                android:id="@+id/password"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter Password"
                android:textColorHint="#8F8F8F"
                android:gravity="center_vertical"
                android:background="@drawable/rounded_edittext2"
                android:textColor="@color/darkgray"
                android:height="55dp" android:width="380dp"
                android:paddingLeft="10dp" android:textSize="17dp"/>

            <android.widget.Button
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:id="@+id/loginbtn"
                android:layout_width="380dp"
                android:layout_height="52dp"
                android:text="Log In"
                android:textColor="@color/white"
                android:background="@drawable/login"
                />

            <android.widget.Button
                android:layout_gravity="center"
                android:id="@+id/loginwithgooglebtn"
                android:layout_width="380dp"
                android:layout_height="52dp"
                android:text="@string/log_in_with_google"
                android:textColor="#03A8F2"
                android:background="@drawable/loginwithgoogle"
                />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
