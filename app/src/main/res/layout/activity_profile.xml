<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:id="@+id/main"
    android:layout_height="match_parent">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/navigationBar">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:text="Profile"
                    android:textSize="20sp"
                    android:textColor="#25ACF4"
                    android:textStyle="bold"
                    android:id="@+id/centerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Button
                    android:backgroundTint="#25ACF4"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <View
                android:layout_width="wrap_content"
                android:layout_height="20dp"/>
            <Button
                android:layout_gravity="center"
                android:layout_width="90dp"
                android:layout_height="100dp"/>

            <TextView
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Julius Ignacio"/>

            <TextView
                android:id="@+id/username"
                android:textColor="@color/darkgray"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""/>

            <View
                android:layout_width="0dp"
                android:layout_height="40dp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <Button
                    android:textSize="14dp"
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:text="Edit profile"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:textSize="14dp"
                    android:layout_width="175dp"
                    android:layout_height="40dp"
                    android:text="Share profile"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Program: Bachelor of Science in Information Technology"/>


            <View
                android:id="@+id/vieww"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <TextView
                android:textStyle="bold"
                android:layout_marginRight="167dp"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socials"/>


            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="380dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center">
                    <Button
                        android:id="@+id/IGbtn"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:id="@+id/IGtext"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="Instagram"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/IGbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>



                    <Button
                        android:id="@+id/Xbtn"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/IGbtn"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="Twitter"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/IGbtn"
                        app:layout_constraintStart_toEndOf="@id/Xbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                    <Button
                        android:id="@+id/Viberbtn"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="@id/IGtext"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="Viber"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/Viberbtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>



        </LinearLayout>




    </ScrollView>

    <!-- Navigation Bar -->
    <LinearLayout
        android:gravity="center"
        android:id="@+id/navigationBar"
        android:layout_width="500dp"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:orientation="horizontal"
        android:background="@drawable/bordered"

        android:showDividers="middle"
        android:divider="@drawable/empty_divider3"
        >



        <Button
            android:id="@+id/ToHome"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="#25ACF4" />

        <Button
            android:id="@+id/ToFinduser"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="#25ACF4" />

        <Button
            android:id="@+id/ToMessages"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="#25ACF4" />

        <Button
            android:id="@+id/ToProfile"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:backgroundTint="#25ACF4" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
